{% extends 'base.html.twig' %}

{% block title %}Epiavion{% endblock %}

 {% block titre %} {{ parent() | upper }} -AVION {% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ epiavion.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ epiavion.name }}</td>
            </tr>
            <tr>
                <th>Point depart</th>
                <td>{{ epiavion.pdepat }}</td>
            </tr>
            <tr>
                <th>Point D'arrivée</th>
                <td>{{ epiavion.parrivee }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ epiavion.prix }}</td>
            </tr>
            <tr>
                <th>Horaire depart</th>
                <td>{{ epiavion.horairedepart ? epiavion.horairedepart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Horaire arrivée</th>
                <td>{{ epiavion.horairearrive ? epiavion.horairearrive|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
<div class="fun">
    <a href="{{ path('epiavion_index') }}"><button type="button" class="btn btn-primary">retune à list</button></a>

